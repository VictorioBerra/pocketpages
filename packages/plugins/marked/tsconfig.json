{
  "compilerOptions": {
    "types": ["pocketbase-jsvm"],
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "$util/*": ["src/lib/util/*"]
    }
  },
  "include": ["src/**/*"]
}

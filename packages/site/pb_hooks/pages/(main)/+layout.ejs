<div class="drawer">
  <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <!-- Navbar -->
    <div class="navbar bg-base-300 w-full">
      <div class="flex-none lg:hidden">
        <label
          for="my-drawer-3"
          aria-label="open sidebar"
          class="btn btn-square btn-ghost"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block h-6 w-6 stroke-current"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
        </label>
      </div>
      <div class="mx-2 flex-1 px-2">
        <a href="/" class="flex items-center gap-3">
          <div class="avatar">
            <div
              class="size-8 rounded-full ring ring-accent ring-offset-base-100 ring-offset-2"
            >
              <img
                src="<%=asset('/apple-touch-icon.png')%>"
                alt="PocketPages Logo"
              />
            </div>
          </div>
          <span class="text-lg font-semibold">PocketPages</span>
        </a>
      </div>
    </div>
    <%- slots.body || slot %>
  </div>
  <div class="drawer-side">
    <label
      for="my-drawer-3"
      aria-label="close sidebar"
      class="drawer-overlay"
    ></label>
    
    <!-- Check if we're in the docs section -->
    <% const isDocsPage = request.url.pathname.startsWith('/docs') %>
    
    <% if (isDocsPage) { %>
      <!-- Show full TOC for docs pages on mobile only -->
      <aside class="min-h-full w-80 bg-gradient-to-b from-base-100 to-base-200 border-r border-base-300 lg:hidden">
        <!-- Sidebar header -->
        <div class="p-6 border-b border-base-300/50">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="w-2 h-8 bg-primary rounded-full"></div>
              <h2 class="text-lg font-bold text-base-content">Contents</h2>
            </div>
            <label
              for="my-drawer-3"
              class="btn btn-sm btn-circle btn-ghost hover:bg-base-300"
              aria-label="Close sidebar"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"
                ></path>
              </svg>
            </label>
          </div>
        </div>

        <!-- Navigation content with TOC -->
        <nav
          class="p-4 overflow-y-auto h-full docs-nav-scroll"
          role="navigation"
          aria-label="Documentation navigation"
        >
          <div class="docs-toc-navigation space-y-2">
            <%- include(`toc.md`) %>
          </div>
        </nav>
      </aside>
    <% } else { %>
      <!-- Show simple navigation for non-docs pages -->
      <ul class="menu bg-base-200 min-h-full w-80 p-4">
        <!-- Sidebar content here -->
        <li><a href="/docs">Docs</a></li>
      </ul>
    <% } %>
  </div>
</div>
